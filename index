                            <option value="moto">üèçÔ∏è Moto</option>
                        </select>
                    </div>

                    <div class="checkbox-group">
                        <input type="checkbox" id="is-second-time">
                        <label for="is-second-time">‚ö†Ô∏è Marcar como segunda vez (mismo d√≠a)</label>
                    </div>

                    <div id="wheels-container"></div>

                    <div id="spare-container" style="display: none;">
                        <div id="spare-input" style="margin-top: 1rem;">
                            <label for="spare-pressure">Presi√≥n del Repuesto (PSI)</label>
                            <input type="number" id="spare-pressure" placeholder="Ej: 32" step="0.1" min="0">
                        </div>
                        <div class="checkbox-group" style="margin-top: 1rem;">
                            <input type="checkbox" id="no-spare" onchange="toggleSpareInput()">
                            <label for="no-spare">‚ùå No tiene llanta de repuesto</label>
                        </div>
                    </div>

                    <button type="submit" class="btn-primary">üíæ Guardar Presiones</button>
                </form>
            </div>
        </div>

        <!-- Pesta√±a de Visualizaci√≥n -->
        <div id="display-tab" class="tab-content">
            <div class="card">
                <button class="btn-clear" onclick="showClearModal()">
                    üóëÔ∏è Limpiar Registros del D√≠a
                </button>
                
                <div class="stats-container">
                    <div class="stat-card">
                        <div class="stat-value" id="total-vehicles">0</div>
                        <div class="stat-label">Total Veh√≠culos</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value" id="total-cars">0</div>
                        <div class="stat-label">Carros üöó</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value" id="total-motos">0</div>
                        <div class="stat-label">Motos üèçÔ∏è</div>
                    </div>
                </div>

                <div id="vehicles-display"></div>
            </div>
        </div>

        <!-- Pesta√±a de Lista -->
        <div id="list-tab" class="tab-content">
            <div class="card">
                <div id="vehicles-table"></div>
            </div>
        </div>
    </div>

    <!-- Notificaci√≥n -->
    <div id="notification" class="notification"></div>

    <!-- Modal para PIN -->
    <div id="pin-modal" class="modal">
        <div class="modal-content">
            <h3 class="modal-title">üîê Ingrese el PIN</h3>
            <input type="password" id="pin-input" class="modal-input" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢" maxlength="4">
            <div class="modal-buttons">
                <button class="modal-btn modal-btn-cancel" onclick="closePinModal()">Cancelar</button>
                <button class="modal-btn modal-btn-confirm" onclick="confirmClear()">Confirmar</button>
            </div>
        </div>
    </div>

    <script>
        const STORAGE_KEY = 'vehicles';
        const DATE_KEY = 'lastClearDate';
        const CORRECT_PIN = '1234';

        // Verificar y limpiar datos si es un nuevo d√≠a
        function checkAndClearIfNewDay() {
            const today = new Date().toDateString();
            const lastClearDate = localStorage.getItem(DATE_KEY);
            
            if (lastClearDate !== today) {
                // Es un nuevo d√≠a, limpiar los datos
                localStorage.removeItem(STORAGE_KEY);
                localStorage.setItem(DATE_KEY, today);
                console.log('Nuevo d√≠a detectado. Datos limpiados autom√°ticamente.');
            }
        }

        // Cambiar de pesta√±a
        function switchTab(tabName) {
            // Remover clase active de todos los botones y contenidos
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            // Agregar clase active al bot√≥n y contenido seleccionado
            event.target.classList.add('active');
            document.getElementById(`${tabName}-tab`).classList.add('active');
            
            // Cargar datos si es necesario
            if (tabName === 'display') {
                loadVehicles();
            } else if (tabName === 'list') {
                loadVehiclesList();
            }
        }

        // Actualizar visualizaci√≥n de ruedas seg√∫n tipo de veh√≠culo
        function updateWheelsDisplay() {
            const vehicleType = document.getElementById('vehicle-type').value;
            const container = document.getElementById('wheels-container');
            const spareContainer = document.getElementById('spare-container');
            
            if (!vehicleType) {
                container.innerHTML = '';
                spareContainer.style.display = 'none';
                return;
            }
            
            if (vehicleType === 'moto') {
                spareContainer.style.display = 'none';
                container.innerHTML = `
                    <div class="wheels-grid">
                        <div class="wheel-input">
                            <label class="wheel-label">üèçÔ∏è Rueda Delantera (PSI)</label>
                            <input type="number" id="front-pressure" placeholder="Ej: 28" step="0.1" min="0" required>
                        </div>
                        <div class="wheel-input">
                            <label class="wheel-label">üèçÔ∏è Rueda Trasera (PSI)</label>
                            <input type="number" id="rear-pressure" placeholder="Ej: 32" step="0.1" min="0" required>
                        </div>
                    </div>
                `;
            } else {
                spareContainer.style.display = 'block';
                // Por defecto, el campo de repuesto est√° visible y es requerido
                document.getElementById('spare-pressure').setAttribute('required', 'required');
                document.getElementById('no-spare').checked = false;
                
                container.innerHTML = `
                    <div class="wheels-grid">
                        <div class="wheel-input">
                            <label class="wheel-label">Delantera Izquierda (PSI)</label>
                            <input type="number" id="front-left" placeholder="Ej: 32" step="0.1" min="0" required>
                        </div>
                        <div class="wheel-input">
                            <label class="wheel-label">Delantera Derecha (PSI)</label>
                            <input type="number" id="front-right" placeholder="Ej: 32" step="0.1" min="0" required>
                        </div>
                        <div class="wheel-input">
                            <label class="wheel-label">Trasera Izquierda (PSI)</label>
                            <input type="number" id="rear-left" placeholder="Ej: 32" step="0.1" min="0" required>
                        </div>
                        <div class="wheel-input">
                            <label class="wheel-label">Trasera Derecha (PSI)</label>
                            <input type="number" id="rear-right" placeholder="Ej: 32" step="0.1" min="0" required>
                        </div>
                    </div>
                `;
            }
        }

        // Mostrar/ocultar input de repuesto (ahora funciona al rev√©s)
        function toggleSpareInput() {
            const noSpare = document.getElementById('no-spare').checked;
            const sparePressure = document.getElementById('spare-pressure');
            
            if (noSpare) {
                // Si marca "no tiene repuesto", deshabilitamos y limpiamos el campo
                sparePressure.removeAttribute('required');
                sparePressure.value = '';
                sparePressure.disabled = true;
                sparePressure.style.opacity = '0.5';
            } else {
                // Si desmarca, habilitamos el campo y lo hacemos requerido
                sparePressure.setAttribute('required', 'required');
                sparePressure.disabled = false;
                sparePressure.style.opacity = '1';
            }
        }

        // Manejar env√≠o del formulario
        document.getElementById('pressure-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const plate = document.getElementById('plate').value.toUpperCase().trim();
            const vehicleType = document.getElementById('vehicle-type').value;
            const isSecondTimeManual = document.getElementById('is-second-time').checked;
            
            if (!plate || !vehicleType) {
                showNotification('Por favor complete todos los campos');
                return;
            }
            
            // Obtener veh√≠culos existentes
            let vehicles = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
            
            // Verificar si ya existe la placa hoy (detecci√≥n autom√°tica)
            const existingVehicle = vehicles.find(v => v.plate === plate);
            const secondTime = existingVehicle !== undefined || isSecondTimeManual;
            
            const vehicleData = {
                plate: plate,
                vehicleType: vehicleType,
                timestamp: new Date().toLocaleString('es-CO'),
                secondTime: secondTime,
                pressures: {},
                hasSpare: false,
                spare: null
            };
            
            if (vehicleType === 'moto') {
                vehicleData.pressures = {
                    front: parseFloat(document.getElementById('front-pressure').value),
                    rear: parseFloat(document.getElementById('rear-pressure').value)
                };
            } else {
                vehicleData.pressures = {
                    frontLeft: parseFloat(document.getElementById('front-left').value),
                    frontRight: parseFloat(document.getElementById('front-right').value),
                    rearLeft: parseFloat(document.getElementById('rear-left').value),
                    rearRight: parseFloat(document.getElementById('rear-right').value)
                };
                
                const noSpare = document.getElementById('no-spare').checked;
                if (!noSpare) {
                    const spareValue = document.getElementById('spare-pressure').value;
                    if (spareValue) {
                        vehicleData.hasSpare = true;
                        vehicleData.spare = parseFloat(spareValue);
                    }
                }
            }
            
            // Agregar al INICIO del array (√∫ltimo registro primero)
            vehicles.unshift(vehicleData);
            localStorage.setItem(STORAGE_KEY, JSON.stringify(vehicles));
            
            if (secondTime) {
                showNotification(`‚ö†Ô∏è Presiones guardadas - Segunda vez para ${plate}`);
            } else {
                showNotification(`‚úÖ Presiones guardadas correctamente para ${plate}`);
            }
            
            // Limpiar formulario
            document.getElementById('pressure-form').reset();
            document.getElementById('wheels-container').innerHTML = '';
            document.getElementById('spare-container').style.display = 'none';
        });

        // Formatear presi√≥n con coma decimal
        function formatPressure(value) {
            return parseFloat(value).toFixed(1).replace('.', ',');
        }

        // Cargar veh√≠culos en la visualizaci√≥n
        function loadVehicles() {
            const vehicles = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
            const container = document.getElementById('vehicles-display');
            
            // Actualizar estad√≠sticas
            const totalCars = vehicles.filter(v => v.vehicleType === 'carro').length;
            const totalMotos = vehicles.filter(v => v.vehicleType === 'moto').length;
            document.getElementById('total-vehicles').textContent = vehicles.length;
            document.getElementById('total-cars').textContent = totalCars;
            document.getElementById('total-motos').textContent = totalMotos;
            
            if (vehicles.length === 0) {
                container.innerHTML = '<div class="no-data">üì≠ No hay presiones registradas a√∫n</div>';
                return;
            }
            
            container.innerHTML = vehicles.map((vehicle, index) => {
                const vehicleTypeLabel = vehicle.vehicleType === 'moto' 
                    ? '<span class="vehicle-badge badge-moto">üèçÔ∏è MOTO</span>' 
                    : '<span class="vehicle-badge badge-car">üöó CARRO</span>';
                
                const secondTimeLabel = vehicle.secondTime 
                    ? '<span class="vehicle-badge badge-second">‚ö†Ô∏è SEGUNDA VEZ</span>' 
                    : '';
                
                let wheelsHTML = '';
                
                if (vehicle.vehicleType === 'moto') {
                    wheelsHTML = `
                        <div class="wheel-display">
                            <div class="wheel-name">üèçÔ∏è Rueda Delantera</div>
                            <div class="wheel-pressure">
                                ${formatPressure(vehicle.pressures.front)}
                                <span class="wheel-unit">PSI</span>
                            </div>
                        </div>
                        <div class="wheel-display">
                            <div class="wheel-name">üèçÔ∏è Rueda Trasera</div>
                            <div class="wheel-pressure">
                                ${formatPressure(vehicle.pressures.rear)}
                                <span class="wheel-unit">PSI</span>
                            </div>
                        </div>
                    `;
                } else {
                    wheelsHTML = `
                        <div class="wheel-display">
                            <div class="wheel-name">Delantera Izquierda</div>
                            <div class="wheel-pressure">
                                ${formatPressure(vehicle.pressures.frontLeft)}
                                <span class="wheel-unit">PSI</span>
                            </div>
                        </div>
                        <div class="wheel-display">
                            <div class="wheel-name">Delantera Derecha</div>
                            <div class="wheel-pressure">
                                ${formatPressure(vehicle.pressures.frontRight)}
                                <span class="wheel-unit">PSI</span>
                            </div>
                        </div>
                        <div class="wheel-display">
                            <div class="wheel-name">Trasera Izquierda</div>
                            <div class="wheel-pressure">
                                ${formatPressure(vehicle.pressures.rearLeft)}
                                <span class="wheel-unit">PSI</span>
                            </div>
                        </div>
                        <div class="wheel-display">
                            <div class="wheel-name">Trasera Derecha</div>
                            <div class="wheel-pressure">
                                ${formatPressure(vehicle.pressures.rearRight)}
                                <span class="wheel-unit">PSI</span>
                            </div>
                        </div>
                    `;
                }
                
                const spareHTML = vehicle.vehicleType === 'carro' ? `
                    <div class="spare-display">
                        <div>
                            <div class="wheel-name">${vehicle.hasSpare ? 'üîß Repuesto' : '‚ùå Sin Repuesto'}</div>
                            <div style="color: var(--text-muted); font-size: 0.85rem; margin-top: 0.3rem;">
                                ${vehicle.timestamp}
                            </div>
                        </div>
                        ${vehicle.hasSpare ? `
                        <div class="wheel-pressure">
                            ${formatPressure(vehicle.spare)}
                            <span class="wheel-unit">PSI</span>
                        </div>
                        ` : `
                        <div style="color: var(--text-muted); font-size: 1rem;">
                            No registrado
                        </div>
                        `}
                    </div>
                ` : `
                    <div style="text-align: right; color: var(--text-muted); font-size: 0.9rem; margin-top: 1rem;">
                        üìÖ ${vehicle.timestamp}
                    </div>
                `;
                
                const separator = index < vehicles.length - 1 ? '<div class="vehicle-separator"></div>' : '';
                
                return `
                    <div class="vehicle-display">
                        <div class="plate-number">
                            ${vehicle.plate}
                            ${vehicleTypeLabel}
                            ${secondTimeLabel}
                        </div>
                        <div class="wheels-display">
                            ${wheelsHTML}
                        </div>
                        ${spareHTML}
                        <div class="action-buttons">
                            <button onclick="copyData('${vehicle.plate}', ${index})" class="btn-copy">
                                üìã Copiar Datos
                            </button>
                            <button onclick="deleteVehicle('${vehicle.plate}', ${index})" class="btn-secondary">
                                üóëÔ∏è Eliminar
                            </button>
                        </div>
                    </div>
                    ${separator}
                `;
            }).join('');
        }

        // Copiar datos
        function copyData(plate, index) {
            const vehicles = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
            const vehicle = vehicles[index];
            
            if (!vehicle) return;
            
            let text = `‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê\n`;
            text += `   PRESIONES CDA - REPORTE   \n`;
            text += `‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê\n\n`;
            text += `PLACA: ${vehicle.plate}\n`;
            text += `TIPO: ${vehicle.vehicleType === 'moto' ? 'MOTO üèçÔ∏è' : 'CARRO üöó'}\n`;
            if (vehicle.secondTime) {
                text += `‚ö†Ô∏è SEGUNDA VEZ (MISMO D√çA)\n`;
            }
            text += `FECHA: ${vehicle.timestamp}\n\n`;
            text += `‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ\n`;
            text += `PRESIONES (PSI):\n`;
            text += `‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ\n`;
            
            if (vehicle.vehicleType === 'moto') {
                text += `üèçÔ∏è Rueda Delantera: ${formatPressure(vehicle.pressures.front)} PSI\n`;
                text += `üèçÔ∏è Rueda Trasera: ${formatPressure(vehicle.pressures.rear)} PSI\n`;
            } else {
                text += `Delantera Izquierda: ${formatPressure(vehicle.pressures.frontLeft)} PSI\n`;
                text += `Delantera Derecha: ${formatPressure(vehicle.pressures.frontRight)} PSI\n`;
                text += `Trasera Izquierda: ${formatPressure(vehicle.pressures.rearLeft)} PSI\n`;
                text += `Trasera Derecha: ${formatPressure(vehicle.pressures.rearRight)} PSI\n`;
                
                if (vehicle.hasSpare) {
                    text += `üîß Repuesto: ${formatPressure(vehicle.spare)} PSI\n`;
                }
            }
            
            text += `‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê\n`;
            
            navigator.clipboard.writeText(text).then(() => {
                showNotification('üìã Datos copiados al portapapeles');
            });
        }

        // Eliminar veh√≠culo
        function deleteVehicle(plate, index) {
            if (!confirm(`¬øEst√° seguro de eliminar el registro de la placa ${plate}?`)) return;
            
            let vehicles = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
            vehicles.splice(index, 1);
            localStorage.setItem(STORAGE_KEY, JSON.stringify(vehicles));
            
            loadVehicles();
            loadVehiclesList();
            showNotification('üóëÔ∏è Registro eliminado correctamente');
        }

        // Cargar lista de veh√≠culos
        function loadVehiclesList() {
            const vehicles = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
            const container = document.getElementById('vehicles-table');
            
            if (vehicles.length === 0) {
                container.innerHTML = '<div class="no-data">üì≠ No hay presiones registradas a√∫n</div>';
                return;
            }
            
            let html = `
                <div class="vehicles-table">
                    <div class="table-header">
                        <div>Placa / Tipo</div>
                        <div>Fecha de Registro</div>
                        <div style="text-align: right;">Acci√≥n</div>
                    </div>
            `;
            
            vehicles.forEach((vehicle, index) => {
                const vehicleTypeIcon = vehicle.vehicleType === 'moto' ? 'üèçÔ∏è' : 'üöó';
                const secondTimeLabel = vehicle.secondTime ? ' <span style="color: var(--accent-light);">‚ö†Ô∏è 2¬™ VEZ</span>' : '';
                
                html += `
                    <div class="table-row">
                        <div>
                            <div class="table-plate">${vehicleTypeIcon} ${vehicle.plate}${secondTimeLabel}</div>
                        </div>
                        <div class="table-date">${vehicle.timestamp}</div>
                        <div class="table-actions">
                            <button class="btn-delete" onclick="deleteVehicleFromList(${index})">
                                üóëÔ∏è Eliminar
                            </button>
                        </div>
                    </div>
                `;
            });
            
            html += '</div>';
            container.innerHTML = html;
        }

        // Eliminar veh√≠culo desde la lista
        function deleteVehicleFromList(index) {
            let vehicles = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
            const vehicle = vehicles[index];
            
            if (!confirm(`¬øEst√° seguro de eliminar el veh√≠culo con placa ${vehicle.plate}?`)) return;
            
            vehicles.splice(index, 1);
            localStorage.setItem(STORAGE_KEY, JSON.stringify(vehicles));
            
            loadVehiclesList();
            loadVehicles();
            showNotification('üóëÔ∏è Veh√≠culo eliminado correctamente');
        }

        // Mostrar modal de PIN
        function showClearModal() {
            document.getElementById('pin-modal').classList.add('show');
            document.getElementById('pin-input').value = '';
            document.getElementById('pin-input').focus();
        }

        // Cerrar modal de PIN
        function closePinModal() {
            document.getElementById('pin-modal').classList.remove('show');
            document.getElementById('pin-input').value = '';
        }

        // Confirmar limpieza con PIN
        function confirmClear() {
            const pinInput = document.getElementById('pin-input').value;
            
            if (pinInput === CORRECT_PIN) {
                // PIN correcto, limpiar registros
                localStorage.removeItem(STORAGE_KEY);
                closePinModal();
                loadVehicles();
                loadVehiclesList();
                showNotification('‚úÖ Registros limpiados correctamente');
            } else {
                // PIN incorrecto
                showNotification('‚ùå PIN incorrecto');
                document.getElementById('pin-input').value = '';
                document.getElementById('pin-input').focus();
            }
        }

        // Permitir presionar Enter en el input de PIN
        document.getElementById('pin-input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                confirmClear();
            }
        });

        // Cerrar modal al hacer clic fuera de √©l
        document.getElementById('pin-modal').addEventListener('click', function(e) {
            if (e.target === this) {
                closePinModal();
            }
        });

        // Mostrar notificaci√≥n
        function showNotification(message) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // Inicializar
        checkAndClearIfNewDay();
        
        // Cargar veh√≠culos si estamos en la pesta√±a de visualizaci√≥n
        if (document.getElementById('display-tab').classList.contains('active')) {
            loadVehicles();
        }
    </script>
</body>
</html>
